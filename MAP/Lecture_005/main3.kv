MDScreen:
    MDCard:
        orientation: "vertical"
        padding: 0, 0, 0 , "36dp"
        size_hint: .5, .5
        pos_hint: {"center_x": .5, "center_y": .5}
        elevation: 2
        shadow_offset: 0, -2
        MDLabel:
            text: "Theme style - {}".format(app.theme_cls.theme_style)
            halign: "center"
            valign: "center"
            bold: True
            font_style: "H5"
        MDRaisedButton:
            text: "Set theme"
            on_release: app.switch_theme_style()
            pos_hint: {"center_x": .5}
